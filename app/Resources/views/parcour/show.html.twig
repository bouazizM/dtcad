{% extends 'base.html.twig' %}

{% block body %}
    <h1>Parcour</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ parcour.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{% if parcour.titre %}{{ parcour.titre|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if parcour.dateFin %}{{ parcour.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Universite</th>
                <td>{{ parcour.universite }}</td>
            </tr>
            <tr>
                <th>Cvid</th>
                <td>{{ parcour.cvId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('parcour_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('parcour_edit', { 'id': parcour.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
