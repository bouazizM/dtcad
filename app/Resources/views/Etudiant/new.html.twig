<body>
{{ form_start(form) }}
<h3 class="font-green">Inscription Etudiant</h3>
<div class="form-group">
    {{ form_widget(form.lastName, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Nom'} }) }}
    {% for errorItem in form.lastName.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
<div class="form-group">
    {{ form_widget(form.firstName, { 'attr': {'class': 'form-control', 'placeholder':'Prenom'} }) }}
    {% for errorItem in form.firstName.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>

<div class="form-group">
    {{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder':'Email'} }) }}
    {% for errorItem in form.email.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>

<div class="form-group">
    {{ form_widget(form.brochure, { 'attr': {'class': 'form-control', 'placeholder':'Image'} }) }}
    {% for errorItem in form.brochure.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
<div class="form-actions">

    <button type="submit" id="register-submit-btn" class="btn btn-success">Inscrire</button>
</div>
{{ form_rest(form) }}
{{ form_end(form) }}
<!-- END REGISTRATION FORM -->
</body>