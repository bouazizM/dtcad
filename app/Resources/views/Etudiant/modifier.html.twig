<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script language="JavaScript" src="https://code.jquery.com/jquery-1.12.4.js" type="text/javascript"></script>
    <script language="JavaScript" src="{{ asset('template/js/jquery.dataTables.min.js')}}" type="text/javascript"></script>
    <script language="JavaScript" src="{{ asset('template/js/dataTables.bootstrap.min.js')}}" type="text/javascript"></script>
    <script language="JavaScript" src="{{ asset('template/js/dataTables.responsive.min.js')}}" type="text/javascript"></script>
    <script language="JavaScript" src="{{ asset('template/js/responsive.bootstrap.min.js')}}" type="text/javascript"></script>

    <link rel="stylesheet" type="text/css" href="{{ asset('template/css/bootstrap.min.css')}}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('template/css/dataTables.bootstrap.min.css')}}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('template/css/responsive.bootstrap.min.css')}}" />


</head>
<body>
{{ form_start(edit_form) }}
<h3 class="font-green">Inscription Etudiant</h3>
<div class="form-group">
    <div class="col-2">
    {{ form_widget(edit_form.lastName, { 'attr': {'class': 'form-control placeholder-no-fix', 'placeholder':'Nom'} }) }}
    {% for errorItem in edit_form.lastName.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>
</div>
<div class="form-group">

    {{ form_widget(edit_form.firstName, { 'attr': {'class': 'form-control', 'placeholder':'Prenom'} }) }}
    {% for errorItem in edit_form.firstName.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>

<div class="form-group">
    {{ form_widget(edit_form.email, { 'attr': {'class': 'form-control', 'placeholder':'Email'} }) }}
    {% for errorItem in edit_form.email.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>


<div class="form-group">
    {{ form_widget(edit_form.brochure, { 'attr': {'class': 'form-control', 'placeholder':'Email'} }) }}
    {% for errorItem in edit_form.brochure.vars.errors %}
        <span class="help-inline">{{ errorItem.message }}</span>
    {% endfor %}
</div>


<div class="form-actions">

    <button type="submit" id="register-submit-btn" class="btn btn-success">Modifier</button>
</div>
{{ form_rest(edit_form) }}
{{ form_end(edit_form) }}

<input type="button" id="bt" name="bt">
<!-- END REGISTRATION FORM -->
</body>

<script>
    var path = "{{ path('homepage') }}";
    $("#bt").click(function(){

        $.ajax({
            url : path,
            type : 'GET'
        });

    });

</script>